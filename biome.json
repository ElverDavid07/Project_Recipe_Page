{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": { "useKeyWithClickEvents": "off" },
			"correctness": { "useExhaustiveDependencies": "off" }
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"indentStyle": "tab",
			"quoteStyle": "single"
		}
	}
}
